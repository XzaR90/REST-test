		<script id="recent-updates-tpl" type="text/x-handlebars-template">
			<%- include recent-updates.tpl.ejs %>
		</script>
		
		<script id="menu-tpl" type="text/x-handlebars-template">
			<%- include menu.tpl.ejs %>
		</script>
	
		<script src="/javascripts/app.js"></script>
	</body>
</html>
